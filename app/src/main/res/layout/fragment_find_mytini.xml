<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund_image">



    <ImageView
        android:id="@+id/mytinitext2"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/findmytinitext" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloud"
        android:id="@+id/cloud"
        android:layout_below="@id/mytinitext2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/animatedText2"
        android:layout_width="190dp"
        android:layout_height="58dp"
        android:fontFamily="@font/singledayregular"
        android:text=""
        android:textColor="#000000"
        android:textSize="19dp"
        android:layout_alignTop="@+id/cloud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

    <ImageView
        android:id="@+id/mbtiImageView"
        android:adjustViewBounds="true"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/heartsping"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cloud"
        android:layout_marginTop="-20dp"
        />

    <TextView
        android:id="@+id/mbtiNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="티니핑 이름"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/singledayregular"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:layout_below="@+id/mbtiImageView"
        android:layout_centerHorizontal="true"

        />





</RelativeLayout>